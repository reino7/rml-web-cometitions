<!DOCTYPE html>
<html class="h-100 wxauktc idc0_332" lang="et">

<head>
  <%- include('./partials/head'); %>
    <script src="/js/axios-v0.26.0.min.js" defer></script>
    <script src="/js/competition-add-script.js" defer></script>
</head>

<body class="d-flex flex-column h-100">
  <header>
    <%- include('./partials/header'); %>
  </header>

  <main role="main" class="flex-shrink-0">
    <div class="container">
      <div>
        <h5 class="text-uppercase fw-bold text-center mb-3">
          Võistluse lisamine
        </h5>
      </div>

      <form action="" method="POST" class="w-50 mx-auto" onsubmit="return false"
      >
        <div class="row mb-3">
          <div class="col">
            <label class="fw-bold" for="compAddDateForm">Kuupäev</label>
            <input type="date" class="form-control" id="compAddDateForm" />
          </div>
          <div class="col">
            <label class="fw-bold" for="compAddTimeForm">Kellaaeg</label>
            <input type="time" class="form-control" id="compAddTimeForm" />
          </div>
        </div>

        <div class="mb-3">
          <label class="fw-bold" for="compAddNameForm">
            Võistluse nimi
          </label>
          <input type="text" class="form-control" id="compAddNameForm" autofocus />
        </div>

        <div class="mb-3">
          <label class="fw-bold" for="compAddLocationForm">Võistluskoht</label>
          <input type="text" class="form-control" id="compAddLocationForm" />
        </div>

        <div class="row mb-3">
          <div class="col">
            <label class="fw-bold" for="compAddUmpireForm">Kohtunik</label>
            <input type="text" class="form-control" id="compAddUmpireForm" />
          </div>
          <div class="form-group col-md-6">
            <label class="fw-bold for=" compAddUmpireContactForm">
              Kontakttelefon
            </label>
            <input type="tel" class="form-control" id="compAddUmpireContactForm" />
          </div>
        </div>

        <div class="row mb-3">
          <div class="col">
            <label class="fw-bold" for="compAddOrganizerForm">
              Korraldaja
            </label>
            <input type="text" class="form-control" id="compAddOrganizerForm" />
          </div>
          <div class="form-group col-md-6">
            <label class="fw-bold" for="compAddOrganizerContactForm">
              Kontakttelefon
            </label>
            <input type="tel" class="form-control" id="compAddOrganizerContactForm" />
          </div>
        </div>

        <!-- <div class="my-4 text-center">
            <button type="submit" class="btn btn-secondary my-4 text-center">
              Sisesta võistluse andmed
            </button>
          </div> -->
        <div class="my-4 text-center">
          <span id="message" class="my-0"></span>
          <button class="btn btn-secondary my-4" onclick="compAddSendFormData()">
            Sisesta võistluse andmed
          </button>
        </div>
      </form>
    </div>
  </main>

  <footer class="footer mt-auto py-3 bg-light border-top">
    <%- include('./partials/footer'); %>
  </footer>
</body>

</html>